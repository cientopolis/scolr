rendering
renderAICriticButtonIfEnabledOn: html

	self accessCredential gptEnabled ifFalse: [ ^ self ].

	html space.
	html anchor
		callback: [ 
			self parent show: (MarkdownReaderComponent new
						 warningMessage:
							 'This critic was generated by an AI. Use at your own responsibility. The prompt it used is available in Scolr''s repository on Github';
						 source: self generateTxtGptCritic;
						 yourself) ];
		target: '_blank';
		with: [ 
			html tbsButton
				beExtraSmall;
				style: 'color: red;';
				with: 'AI Critic' ]